{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "declaration": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src/**/*.tsx", "src/**/*.ts"]
}
